<?xml version="1.0" encoding="UTF-8" ?>
<hivemq>
    <listeners>
        <tcp-listener>
            <port>1883</port>
            <bind-address>0.0.0.0</bind-address>
        </tcp-listener>
    </listeners>
    
    <mqtt>
        <session-expiry>
            <max-interval>86400</max-interval>
        </session-expiry>
        <message-expiry>
            <max-interval>86400</max-interval>
        </message-expiry>
        <queued-messages>
            <max-queue-size>1000</max-queue-size>
        </queued-messages>
    </mqtt>
    
    <restrictions>
        <max-connections>25</max-connections>
    </restrictions>
</hivemq>
